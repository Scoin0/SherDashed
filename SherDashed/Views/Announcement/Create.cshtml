@model SherDashed.Models.Announcement.Announcement
@{
    ViewData["Title"] = "Create Announcement";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Create New Announcement</h2>
            
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="AnnouncementMessage" class="form-label"></label>
                    <textarea asp-for="AnnouncementMessage" class="form-control" rows="4" placeholder="Enter your announcement messgae..."></textarea>
                    <span asp-validation-for="AnnouncementMessage" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CreatedOn" class="form-label"></label>
                    <input asp-for="CreatedOn" class="form-control" type="datetime-local" value="@Model.CreatedOn.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <input type="submit" name="submit" class="btn btn-success" value="Submit" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}