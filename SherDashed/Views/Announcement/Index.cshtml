@model List<SherDashed.Models.Announcement.Announcement>
@{
    ViewData["Title"] = "Announcements";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Announcements</h2>
            <a asp-action="Create" class="btn btn-primary">Add Announcement</a>
            
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Message</th>
                            <th>Created On</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var announcement in Model)
                        {
                            <tr>
                                <td>@announcement.AnnouncementId</td>
                                <td>@announcement.AnnouncementMessage</td>
                                <td>@announcement.CreatedOn.ToString("MM/dd/yyyy hh:mm tt")</td>
                                <td>
                                    @if (announcement.ModifiedOn.HasValue)
                                    {
                                        @announcement.ModifiedOn.Value.ToString("MM/dd/yyyy hh:mm tt")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@announcement.AnnouncementId" class="btn btn-sm btn-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@announcement.AnnouncementId" class="btn btn-sm btn-warning">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@announcement.AnnouncementId" method="post" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this announcement?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert alert-info">
                    <p>No announcements found. <a asp-action="Create">Create one!</a></p>
                </div>
            }
        </div>
    </div>
</div>