@model SherDashed.Models.Announcement.Announcement
@{
    ViewData["Title"] = "Edit Announcement";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Edit Announcement</h2>
            
            <form asp-action="Edit" method="post">
                <input asp-for="AnnouncementId" type="hidden" />
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="AnnouncementMessage" class="form-label"></label>
                    <textarea asp-for="AnnouncementMessage" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="AnnouncementMessage" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CreatedOn" class="form-label"></label>
                    <input asp-for="CreatedOn" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
                
                @if (Model.ModifiedOn.HasValue)
                {
                    <div class="form-group mb-3">
                        <label class="form-label">Last Modified</label>
                        <input type="text" class="form-control" value="@Model.ModifiedOn.Value.ToString("MM/dd/yyyy hh:mm tt")" readonly />
                        <small class="form-text text-muted"> This will be updated automatically.</small>
                    </div>
                }
                
                <div class="form-group">
                    <input type="submit" value="Update Announcement" class="btn btn-success" />
                    <a asp-action="Details" asp-route-id="@Model.AnnouncementId" class="btn btn-info">View</a>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}