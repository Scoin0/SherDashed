@model SherDashed.Models.Announcement.Announcement
@{
    ViewData["Title"] = "Announcement Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Announcement #@Model.AnnouncementId</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Message:</dt>
                        <dd class="col-sm-9">@Model.AnnouncementMessage</dd>
                        
                        <dt class="col-sm-3">Date:</dt>
                        <dd class="col-sm-9">@Model.CreatedOn.ToString("MM/dd/yyyy 'at' hh:mm tt")</dd>
                        
                        <dt class="col-sm-3">Modified On:</dt>
                        <dd class="col-sm-9">
                            @if (Model.ModifiedOn.HasValue)
                            {
                                @Model.ModifiedOn.Value.ToString("MM/dd/yyyy hh:mm tt")
                            }
                            else
                            {
                                <span class="text-muted">Never</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.AnnouncementId" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    
                    <form asp-action="Delete" asp-route-id="@Model.AnnouncementId" method="post" style="display: inline;" class="float-end">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this announcement?')">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>